{
  "name": "basic-react-boilerplate",
  "version": "1.0.0",
  "description": "bootstrap react app fast and easy",
  "main": "src/index.tsx",
  "scripts": {
    "start": "webpack serve --open --env development --config webpack/webpack.development.babel.ts",
    "lint": "eslint --ext .js,.ts,.tsx ./src",
    "lint:fix": "npm run lint -- --fix",
    "stylelint": "stylelint \"src/**/*.css\"",
    "stylelint:fix": "npm run stylelint -- --fix",
    "build": "webpack --env production --config webpack/webpack.production.babel.ts",
    "test": "babel-node ./node_modules/.bin/jest ./src",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "boilerplate",
    "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SeregaSE/basic-react-boilerplate"
  },
  "author": "Sergey Sergeyev",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "core-js": "^3.15.0",
    "css-modules-typescript-loader": "^4.0.1",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@types/css-minimizer-webpack-plugin": "^3.0.1",
    "@types/mini-css-extract-plugin": "^1.4.3",
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "postcss-loader": "^6.1.0",
    "postcss-modules-values": "^4.0.0",
    "prettier": "^2.3.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.4",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^1.16.5",
    "webpack-merge": "^5.8.0"
  }
}
